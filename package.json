{
  "name": "harmony",
  "version": "0.0.1",
  "description": "A music playlist sharing application",
  "author": "Adam Kahl <akahl@purdue.edu>",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite & cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "start": "electron .",
    "test": "vitest",
    "electron:build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CadenBPurdue/harmony.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CadenBPurdue/harmony/issues"
  },
  "homepage": "https://github.com/CadenBPurdue/harmony#readme",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^6.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.6.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8",
    "vite": "^6.0.11",
    "vitest": "^3.0.3"
  },
  "build": {
    "appId": "harmony",
    "productName": "Harmony",
    "files": [
      "dist/**/*",
      "src/main/main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "mac": {
      "target": ["dmg"],
      "arch": ["x64", "arm64"],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["deb"],
      "arch": ["x64", "arm64"],
      "category": "AudioVideo"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "CadenBPurdue",
        "repo": "harmony"
      }
    ]
  }
}
